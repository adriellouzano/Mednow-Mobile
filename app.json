{
  "expo": {
    "name": "MedNow",
    "slug": "mednow-mobile",
    "owner": "wandersonpio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "mednow",
    "userInterfaceStyle": "automatic",

    "plugins": [
      "expo-notifications"
    ],

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#C7EAFF"
    },

    "android": {
      "package": "com.wandersonpio.mednowmobile",
      "googleServicesFile": "./google-services.json", 

      "permissions": [
        "NOTIFICATIONS"
      ],

      "useNextNotificationsApi": true,

      "adaptiveIcon": {
        "backgroundColor": "#C7EAFF",
        "foregroundImage": "./assets/adaptive-icon.png"
      }
    },

    "extra": {
      "eas": {
        "projectId": "4f5e4a1c-b7f5-49d7-be37-170455adf196"
      }
    }
  }
}
